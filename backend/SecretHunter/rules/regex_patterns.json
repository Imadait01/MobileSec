{
  "patterns": [
    {
      "name": "Google API Key",
      "pattern": "AIza[0-9A-Za-z-_]{35}",
      "severity": "HIGH",
      "description": "Google API Key detected"
    },
    {
      "name": "AWS Access Key ID",
      "pattern": "AKIA[0-9A-Z]{16}",
      "severity": "HIGH",
      "description": "AWS Access Key ID detected"
    },
    {
      "name": "AWS Secret Access Key",
      "pattern": "(?i)aws[_-]?secret[_-]?access[_-]?key[\\s=:]+['\"]?([A-Za-z0-9/+=]{40})['\"]?",
      "severity": "HIGH",
      "description": "AWS Secret Access Key detected"
    },
    {
      "name": "JWT Token",
      "pattern": "eyJ[A-Za-z0-9-_=]+\\.eyJ[A-Za-z0-9-_=]+\\.[A-Za-z0-9-_=]+",
      "severity": "HIGH",
      "description": "JWT Token detected"
    },
    {
      "name": "Base64 Encoded Secret",
      "pattern": "(?i)(?:password|secret|key|token)[\\s=:]+['\"]?([A-Za-z0-9+/]{32,}={0,2})['\"]?",
      "severity": "MEDIUM",
      "description": "Base64 encoded secret detected"
    },
    {
      "name": "Hardcoded Password",
      "pattern": "(?i)(?:password|passwd|pwd)[\\s=:]+['\"]?([^'\"\\s]{8,})['\"]?",
      "severity": "HIGH",
      "description": "Hardcoded password detected"
    },
    {
      "name": "RSA Private Key",
      "pattern": "-----BEGIN (RSA |EC |DSA |OPENSSH )?PRIVATE KEY-----",
      "severity": "HIGH",
      "description": "Private key detected"
    },
    {
      "name": "OAuth Token",
      "pattern": "(?i)oauth[_-]?token[\\s=:]+['\"]?([A-Za-z0-9_-]{20,})['\"]?",
      "severity": "HIGH",
      "description": "OAuth token detected"
    },
    {
      "name": "GitHub Token",
      "pattern": "ghp_[A-Za-z0-9]{36}",
      "severity": "HIGH",
      "description": "GitHub Personal Access Token detected"
    },
    {
      "name": "Slack Token",
      "pattern": "xox[baprs]-[0-9a-zA-Z-]{10,48}",
      "severity": "HIGH",
      "description": "Slack token detected"
    },
    {
      "name": "Generic API Key",
      "pattern": "(?i)(?:api[_-]?key|apikey)[\\s=:]+['\"]?([A-Za-z0-9_-]{20,})['\"]?",
      "severity": "MEDIUM",
      "description": "Generic API key detected"
    },
    {
      "name": "Database Connection String",
      "pattern": "(?i)(?:mysql|postgres|mongodb|redis)://[^\\s'\"]+",
      "severity": "HIGH",
      "description": "Database connection string with credentials detected"
    },
    {
      "name": "Internal Endpoint",
      "pattern": "(?i)(?:localhost|127\\.0\\.0\\.1|192\\.168\\.|10\\.|172\\.(?:1[6-9]|2[0-9]|3[01])\\.)[^\\s'\"]+",
      "severity": "LOW",
      "description": "Internal endpoint detected"
    },
    {
      "name": "SSL Certificate",
      "pattern": "-----BEGIN CERTIFICATE-----",
      "severity": "MEDIUM",
      "description": "SSL certificate detected"
    },
    {
      "name": "Firebase API Key",
      "pattern": "(?i)(?:firebase|fcm)[_-]?(?:api[_-]?key|server[_-]?key)[\\s=:\"']+([A-Za-z0-9_-]{30,})",
      "severity": "HIGH",
      "description": "Firebase/FCM API key detected"
    },
    {
      "name": "Firebase Database URL",
      "pattern": "https://[a-z0-9-]+\\.firebaseio\\.com",
      "severity": "MEDIUM",
      "description": "Firebase database URL detected"
    },
    {
      "name": "Google Cloud API Key",
      "pattern": "(?i)(?:google[_-]?cloud|gcp)[_-]?api[_-]?key[\\s=:\"']+([A-Za-z0-9_-]{20,})",
      "severity": "HIGH",
      "description": "Google Cloud API key detected"
    },
    {
      "name": "AWS Mobile SDK Key",
      "pattern": "(?i)(?:aws[_-]?mobile|amplify)[_-]?(?:key|id)[\\s=:\"']+([A-Za-z0-9_-]{20,})",
      "severity": "HIGH",
      "description": "AWS Mobile SDK key detected"
    },
    {
      "name": "Facebook Access Token",
      "pattern": "EAACEdEose0cBA[0-9A-Za-z]+",
      "severity": "HIGH",
      "description": "Facebook access token detected"
    },
    {
      "name": "Facebook App Secret",
      "pattern": "(?i)(?:facebook|fb)[_-]?app[_-]?secret[\\s=:\"']+([a-f0-9]{32})",
      "severity": "HIGH",
      "description": "Facebook app secret detected"
    },
    {
      "name": "Twitter API Key",
      "pattern": "(?i)twitter[_-]?(?:api[_-]?key|consumer[_-]?key)[\\s=:\"']+([A-Za-z0-9]{25})",
      "severity": "HIGH",
      "description": "Twitter API key detected"
    },
    {
      "name": "Twitter Bearer Token",
      "pattern": "(?i)twitter[_-]?bearer[_-]?token[\\s=:\"']+([A-Za-z0-9%]{100,})",
      "severity": "HIGH",
      "description": "Twitter bearer token detected"
    },
    {
      "name": "Stripe API Key",
      "pattern": "(?:sk|pk)_(test|live)_[0-9a-zA-Z]{24,}",
      "severity": "HIGH",
      "description": "Stripe API key detected"
    },
    {
      "name": "Twilio API Key",
      "pattern": "SK[a-z0-9]{32}",
      "severity": "HIGH",
      "description": "Twilio API key detected"
    },
    {
      "name": "SendGrid API Key",
      "pattern": "SG\\.[a-zA-Z0-9_-]{22}\\.[a-zA-Z0-9_-]{43}",
      "severity": "HIGH",
      "description": "SendGrid API key detected"
    },
    {
      "name": "PayPal Braintree Access Token",
      "pattern": "access_token\\$production\\$[0-9a-z]{16}\\$[0-9a-f]{32}",
      "severity": "HIGH",
      "description": "PayPal Braintree access token detected"
    },
    {
      "name": "Square Access Token",
      "pattern": "sq0atp-[0-9A-Za-z\\-_]{22}",
      "severity": "HIGH",
      "description": "Square access token detected"
    },
    {
      "name": "Square OAuth Secret",
      "pattern": "sq0csp-[0-9A-Za-z\\-_]{43}",
      "severity": "HIGH",
      "description": "Square OAuth secret detected"
    },
    {
      "name": "Mapbox API Key",
      "pattern": "(?:pk|sk|tk)\\.[a-zA-Z0-9_-]{60,}",
      "severity": "MEDIUM",
      "description": "Mapbox API key detected"
    },
    {
      "name": "Azure Storage Account Key",
      "pattern": "(?i)(?:azure[_-]?storage|storage[_-]?account)[_-]?key[\\s=:\"']+([A-Za-z0-9+/]{88}==)",
      "severity": "HIGH",
      "description": "Azure Storage account key detected"
    },
    {
      "name": "Heroku API Key",
      "pattern": "[h|H][e|E][r|R][o|O][k|K][u|U].*[0-9A-F]{8}-[0-9A-F]{4}-[0-9A-F]{4}-[0-9A-F]{4}-[0-9A-F]{12}",
      "severity": "HIGH",
      "description": "Heroku API key detected"
    },
    {
      "name": "Android Keystore Password",
      "pattern": "(?i)(?:keystore|storePassword|keyPassword)[\\s=:\"']+([^\\s\"']{6,})",
      "severity": "HIGH",
      "description": "Android keystore password detected"
    },
    {
      "name": "iOS Push Certificate",
      "pattern": "-----BEGIN CERTIFICATE-----[\\s\\S]{100,}-----END CERTIFICATE-----",
      "severity": "MEDIUM",
      "description": "iOS push certificate detected"
    },
    {
      "name": "OneSignal API Key",
      "pattern": "(?i)onesignal[_-]?(?:api[_-]?key|app[_-]?id)[\\s=:\"']+([a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12})",
      "severity": "HIGH",
      "description": "OneSignal API key detected"
    },
    {
      "name": "Crashlytics API Key",
      "pattern": "(?i)crashlytics[_-]?(?:api[_-]?key)[\\s=:\"']+([a-f0-9]{40})",
      "severity": "MEDIUM",
      "description": "Crashlytics API key detected"
    },
    {
      "name": "Mixpanel Token",
      "pattern": "(?i)mixpanel[_-]?token[\\s=:\"']+([a-f0-9]{32})",
      "severity": "MEDIUM",
      "description": "Mixpanel token detected"
    },
    {
      "name": "Amplitude API Key",
      "pattern": "(?i)amplitude[_-]?api[_-]?key[\\s=:\"']+([a-f0-9]{32})",
      "severity": "MEDIUM",
      "description": "Amplitude API key detected"
    },
    {
      "name": "Smali Hardcoded String",
      "pattern": "const-string[\\s]+v\\d+,\\s*\"([^\"]{20,})\"",
      "severity": "LOW",
      "description": "Hardcoded string in smali bytecode detected"
    },
    {
      "name": "Android Backup Agent Password",
      "pattern": "(?i)backup[_-]?(?:password|key)[\\s=:\"']+([^\\s\"']{8,})",
      "severity": "HIGH",
      "description": "Android backup password detected"
    }
  ]
}

