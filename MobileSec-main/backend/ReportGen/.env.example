# Configuration du service ReportGen
# Copiez ce fichier vers .env et configurez les valeurs

# Port du serveur
PORT=3005

# Environnement (development, production)
NODE_ENV=development

# Dossier temporaire pour les rapports générés
TEMP_DIR=./tmp

# Durée de rétention des rapports (en heures)
REPORT_RETENTION_HOURS=24

# Taille maximale des payloads
MAX_PAYLOAD_SIZE=50mb

# Niveau de log (error, warn, info, debug)
LOG_LEVEL=info

# Timeout pour la génération PDF (en secondes)
PDF_TIMEOUT_SECONDS=60

# Rate limiting (requêtes par minute)
RATE_LIMIT_MAX=10
RATE_LIMIT_WINDOW_MS=60000
